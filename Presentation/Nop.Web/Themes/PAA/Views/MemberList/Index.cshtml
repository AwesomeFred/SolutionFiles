<div class="listing-header">

    <div class="header-section">


        <div class="info-section">

            <p class="sort-section">
                <span style="font-size:0.85rem"> - Sort By: </span>
                <select id="sort-select" onchange="DoReSort(this);">
                    <option selected value="0">Last Name</option>
                    <option value="1">Email</option>
                    <option value="2">Expiring</option>
                </select>
            </p>

            <h3>Staff Dashboard </h3>
            <h4>@ViewBag.Title</h4>


            @Html.ActionLink("Add New Member", "Create/1")



        </div>

        <div class="reserved-section">

            @Html.Partial("_ConstantContactControl")
        </div>


    </div>
</div>



<div>
    <section>
        <hr style="width:1040px">
        <article>
            <table class="create-table">
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>

                    @*<th>
                        @Html.DisplayNameFor(model => model.StreetAddress)
                    </th>*@

                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Renewal)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>


                @foreach (var item in Model)
                {

                    string _memberExpires = item.Renewal.ToShortDateString();
            <tr>
                <td></td>

                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                @*<td>
                   @Html.DisplayFor(modelItem => item.Company)
                </td>
              
                 <td>
                    @Html.DisplayFor(modelItem => item.StreetAddress)&nbsp;
                    @Html.DisplayFor(modelItem => item.City),&nbsp;
                    @Html.DisplayFor(modelItem => item.State.Abbreviation)&nbsp;
                    @Html.DisplayFor(modelItem => item.ZipCode)&nbsp;
                </td>
                        *@

                <td width='100px'>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>

                    @_memberExpires


                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Status.Value)

                </td>


                <td width="110px">
                    @Html.ActionLink("Edit", "Edit", new { id = item.PaaMemberId }) |

                    @Html.ActionLink("Details", "Details", new { id = item.PaaMemberId })
                </td>

            </tr>
                }

            </table>
        </article>
    </section>
</div>



<form id="sortexchange" method="get" target="_self" action=""></form>

<script>
    $(document).ready(function () {


        var _selected =  @ViewBag.SortSelector;


        $('#sort-select').val(_selected);





        });


    function DoReSort(loc) {

        var _action = "/staffmemberlist/" + loc.value;

        $("#sortexchange").attr('action', _action);
        $("#sortexchange").submit();


    }
</script>












